"""
The Xen Based Execution Environment managing daemon
"""

__version__ = "$Rev: $"
__author__ = "$Author: $"

import sys, os, os.path

# add some temporary module paths
xbed_home = os.environ.get("XBED_HOME") or (os.path.normpath(os.path.abspath(sys.argv[0]) + "/../.."))
sys.path.append(os.path.expanduser(os.path.join(xbed_home, "modules")))
do_profiling = False

from xbe.xbed.daemon import main
if __name__ == "__main__":
    if do_profiling:
        try:
            import profile
            profile.run("main(sys.argv)", "/tmp/xbed.profile")
        except ImportError:
            main(sys.argv)
    else:
        main(sys.argv)
