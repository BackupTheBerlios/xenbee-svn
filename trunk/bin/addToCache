#!/usr/bin/python

import xbe, sys
from twisted.internet import reactor
xbe.initLogging("/tmp/foo")

from xbe.cached.cache import Cache
path = "/srv/xen-images/xenbee/cache"

if len(sys.argv) < 3:
    print >>sys.stderr, "usage:", sys.argv[0], "file", "{image,kernel,initrd,data}", "[description]"
    sys.exit(1)

uri, fileType = sys.argv[1:3]
desc = " ".join(sys.argv[3:])

if fileType not in ("image", "kernel", "initrd", "data"):
    print >>sys.stderr, "illegal file type"
    sys.exit(2)

cache = Cache(path)

def _s(uid):
    print uid
    reactor.stop()

def _f(err):
    print err.getErrorMessage()
    reactor.stop()

cache.cache("file://"+uri, fileType, desc).addCallback(_s).addErrback(_f)
reactor.run()
